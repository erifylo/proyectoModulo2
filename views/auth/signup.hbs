<div class="container" id="container">
    <div class="form-container sign-in-container">
        <form action="/signup" method="post">
            <h1>Create Account</h1>
            <span>or use your email for registration</span>
            <input type="text" name="nickname" id="name-input" placeholder="Nickname">
            <input type="email" name="email" id="email-input" placeholder="Email">
            <input type="password" name="password" id="password-input" placeholder="Password">
            <input type="password" name="repeatPassword" id="repeatPassword-input" placeholder="Repeat Password">
            <button>Sign Up</button>
            {{#if errorMessage}}
            <p class="error-message">
                {{ errorMessage }}
            </p>
            {{/if}}
        </form>
    </div>
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-right">
                <h1>Welcome Back!</h1>
                <p>To keep connected with us please login with your personal info</p>
            <a href="/login"> <button class="ghost" >Log in</button></a> 
            </div>
        </div>
    </div>
</div>